{
  "name": "athega-website",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "sass": "sass --load-path=_includes assets/site.scss:_site/assets/site.css --style=compressed",
    "sass:watch": "sass --load-path=_includes assets/site.scss:_site/assets/site.css --style=compressed --watch",
    "build": "npm run sass && npx @11ty/eleventy",
    "start": "node scripts/dev.mjs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "sass": "^1.77.0"
  }
}
